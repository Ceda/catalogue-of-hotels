#navigation_tab
  %ul
    %li{:class=>set_current_style("places", "places/images")}
      = link_to t("places.navigation"), places_path
    %li{:class=>set_current_style("hotels", "hotels/images", "hotels/maps", "hotels/rooms")}
      = link_to t("hotels.navigation"), hotels_path
    %li{:class=>set_current_style("rooms")}
      = link_to t("rooms.navigation"), hotels_path

    -if current_user
      -if current_user.admin?
        %li{:class=>set_current_style("dynamic_models", "dynamic_fields")}
          = link_to t("dynamic_fields.navigation"), dynamic_models_path if can?(:create, DynamicModel)

