%h1= t(".title")
#main_content
  - if @reserves.any?
    = render :partial => "reserve", :collection=>@reserves
    = t_will_paginate(@reserves)
  - else
    = t('no_records')
#navigation
  #wizzard
    %div{:class => params[:status].to_i == 0 || !params[:status] ? "current" : ""}
      = link_to t("reserves.status.draft"), reserves_path(:status=>0) 
    %div{:class => params[:status].to_i == 1 ? "current" : ""}
      = link_to t("reserves.status.sent"), reserves_path(:status=>1) 
    %div{:class => params[:status].to_i == 2 ? "current" : ""}
      = link_to t("reserves.status.adopted"), reserves_path(:status=>2)
    %div{:class => params[:status].to_i == 3 ? "current" : ""}
      = link_to t("reserves.status.confirmed"), reserves_path(:status=>3)
    %div{:class => params[:status].to_i == 4 ? "current" : ""}
      = link_to t("reserves.status.paid"), reserves_path(:status=>4)
  .info
    .header
      = t(".info")
    .text
      %span.bold
        = t("reserves.status.draft")
      = t(".info_draft")
    .text
      %span.bold
        = t("reserves.status.sent")
      = t(".info_sent")
    .text
      %span.bold
        = t("reserves.status.adopted")
      = t(".info_adopted")
    .text
      %span.bold
        = t("reserves.status.confirmed")
      = t(".info_confirmed")
    .text
      %span.bold
        = t("reserves.status.paid")
      = t(".info_paid")
