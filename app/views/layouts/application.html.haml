!!! Strict
%html
  %head
    %title
      = yield(:page_title)
      - if render_breadcrumbs(:full=>true).present?
        = "#{render_breadcrumbs(:no_html=>true, :separator => ' / ', :full=>true).html_safe}"
      -else
        = "Отдых на на черном море и юге России"
      \- CoastSun.Ru
    %meta{:name=>'yandex-verification', :content=>'59ea291019ca2dfd'}/
    :plain
      <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon"/>
      <link rel="icon" href="/favicon.ico" type="image/x-icon"/>
    - if yield :page_description
      :erb
        <meta name="Description" content="<%= yield(:page_description)%>"/>
    - if yield(:page_title)
      :erb
        <meta name="Keywords" content="<%= yield(:page_title) %>"/>

    = stylesheet_link_tag "application", "master", "jquery-ui-1.8.5.custom", "tipTip"
    = stylesheet_link_tag "/fancybox/jquery.fancybox-1.3.4.css"
    = yield :stylesheets
    = javascript_include_tag :defaults
    = javascript_include_tag "jquery.tipTip.minified.js"
    = javascript_include_tag "/fancybox/jquery.fancybox-1.3.4.pack.js"
    = javascript_include_tag "/fancybox/jquery.easing-1.3.pack.js"
    = javascript_include_tag "/fancybox/jquery.mousewheel-3.0.4.pack.js"
    = yield :javascript
    = csrf_meta_tag
    = yield :maps
  %body
    = render :partial=>"layouts/users_login_register"
    #body
      #logo.left
        = link_to image_tag("logo.png", :alt=>"CoastSun.Ru"), "/"
      .right.ellow{:style => "width: 250px; padding-top: 25px;"}
        = t("telephones")
        %br
        +7928-226-27-83
      .reset
      = render :partial=>"shared/navigation_tab"
      #content
        #breadcrambs
          = render_breadcrumbs().html_safe
        = flashes
        = yield
      = render :partial => "shared/footer"
      = render :partial => "shared/copyright"
    = render :partial => "layouts/tooltips"
