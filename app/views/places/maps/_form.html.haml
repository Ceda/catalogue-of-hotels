= link_to t('places.maps.marker.show_form'), "#", :onclick=>"return false;", :id=>"form_toggle"
#hide_ele
  %b= t('.create_marker').html_safe

  = form_for([@place, @map], :remote => true) do |f|
    #notice{:class=>"notice", :style=>"display:none"}

    .field
      = f.label :lat
      %br
      = f.text_field :lat

    .field
      = f.label :lng
      %br
      = f.text_field :lng

    .field
      = f.label :zoom
      %br
      = f.text_field :zoom, :size=>"4"

    %br
    .actions
      = f.submit

%script
  $('#form_toggle').click(function () {
  $('#hide_ele').toggle();
  });


